---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.tsx";
import CustomInput from "../components/CustomInput.tsx";
import Map from "../components/Map"
---

<Layout title="IP Address Tracker">
	<div
		class="bg-mobile md:bg-desktop bg-center bg-no-repeat bg-cover w-screen h-2/5 md:h-1/3 bg-blue-500"
	>
		<div class="flex flex-col items-center gap-10 mx-5 md:mx-0">
			<h1 class="text-white font-bold text-2xl pt-5">
				IP Address Tracker
			</h1>
			<CustomInput client:load />
			<Card client:load />
		</div>
	</div>
	<div class="w-screen h-3/5 md:h-2/3">
		<Map client:only="react" />
	</div>	
</Layout>
